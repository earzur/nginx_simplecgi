#!/bin/bash

FASTCGI_USER=<%= @nginx_user %>
FASTCGI_GROUP=<%= @nginx_group %>
SOCKET=<%= File.join(@dispatch_dir, 'cgiwrap-dispatch.sock') %>
PIDFILE=<%= File.join(@dispatch_dir, 'cgiwrap_dispatcher.pid') %>
CHILDREN=<%= @dispatch_procs.to_i %>
WRAPPER=/usr/sbin/fcgiwrap

/usr/bin/spawn-fcgi -s $SOCKET -P $PIDFILE -F $CHILDREN -u $FASTCGI_USER -g $FASTCGI_GROUP -f $WRAPPER
